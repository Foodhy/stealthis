---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import { type Locale, getLocaleFromUrl } from "@i18n/index";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalPath?: string;
  noindex?: boolean;
  alternateLinks?: Array<{ hreflang: string; href: string }>;
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const {
  title,
  description = "Reusable web resources — animations, pages, components, and patterns. All open source.",
  image,
  canonicalPath = Astro.url.pathname,
  noindex = false,
  alternateLinks = [],
  structuredData,
} = Astro.props;
const locale = getLocaleFromUrl(Astro.url);
const site = Astro.site ?? new URL("https://stealthis.dev");
const canonicalURL = new URL(canonicalPath, site).toString();
const imageURL = new URL(image ?? "/social-card.webp", site).toString();
const robots = noindex ? "noindex, nofollow" : "index, follow";
const ogLocale: Record<Locale, string> = { en: "en_US", es: "es_ES" };
const structuredDataJson = structuredData ? JSON.stringify(structuredData) : null;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content={robots} />
    <meta name="theme-color" content="#0b1120" />
    <link rel="canonical" href={canonicalURL} />
    {alternateLinks.map((link) => (
      <link rel="alternate" hreflang={link.hreflang} href={link.href} />
    ))}
    <title>{title} — StealThis.dev</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} — StealThis.dev`} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="StealThis.dev" />
    <meta property="og:locale" content={ogLocale[locale]} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="StealThis.dev resource preview card" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} — StealThis.dev`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:image:alt" content="StealThis.dev resource preview card" />
    {structuredDataJson && (
      <script type="application/ld+json" set:html={structuredDataJson} />
    )}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Nav locale={locale} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />

    <!-- i18n detection -->
    <script>
      const stored = localStorage.getItem("stealthis:locale");
      const preferred = stored ?? navigator.language.split("-")[0];
      const supported = ["en", "es"];
      if (preferred && supported.includes(preferred) && !window.location.pathname.startsWith(`/${preferred}/`)) {
        if (preferred === "es" && !window.location.pathname.startsWith("/es")) {
          // Don't auto-redirect — let user choose via selector
        }
      }
    </script>
  </body>
</html>
