{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      ".astro",
      ".wrangler",
      "*.d.ts",
      "apps/**/public/vendor/**",
      "apps/**/public/vendors/**",
      "apps/**/public/**/vendor/**",
      "apps/**/public/**/vendors/**"
    ]
  },
  "overrides": [
    {
      "include": ["**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    },
    {
      "include": ["packages/content/resources/**/snippets/**"],
      "linter": {
        "rules": {
          "a11y": {
            "useValidAnchor": "off"
          },
          "complexity": {
            "noForEach": "off",
            "useOptionalChain": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          },
          "suspicious": {
            "noAssignInExpressions": "off"
          },
          "style": {
            "noUnusedTemplateLiteral": "off",
            "useTemplate": "off",
            "useExponentiationOperator": "off",
            "useSingleVarDeclarator": "off"
          }
        }
      }
    }
  ]
}
